{
  "compilerOptions": {                        
    "target": "ES6",                               
    "module": "ES6",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true        
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}